# Theme
theme = "Atom One Dark"

# Font
font-family = "MesloLGM Nerd Font Mono"
font-size = 14
# Adds weight to thin fonts for better readability
font-thicken = true

# Window & Visual
window-padding-x = 12
window-padding-y = 12
# Balances padding when resizing
window-padding-balance = true
# Remember window size/position between sessions
window-save-state = always
# Integrates tabs into titlebar like native Mac apps
macos-titlebar-style = tabs
# Better color accuracy on Mac displays
window-colorspace = display-p3

# Cursor
cursor-style = block
# Adds vertical spacing between lines
adjust-cell-height = 20%

# Performance & Behavior
# Faster scrolling
mouse-scroll-multiplier = 2
# Reduces visual distraction
mouse-hide-while-typing = true

# Enables prompt marking, sudo detection, and dynamic titles
shell-integration-features = cursor,sudo,title

# Keybindings
keybind = shift+enter=text:\x1b\r
keybind = cmd+t=new_tab
keybind = cmd+n=new_window
keybind = cmd+w=close_surface
# Split terminal vertically
keybind = cmd+d=new_split:right
# Split terminal horizontally
keybind = cmd+shift+d=new_split:down
keybind = cmd+shift+r=reload_config
