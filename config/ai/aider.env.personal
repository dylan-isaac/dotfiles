# Aider Environment Configuration - Personal
# Place this file in your home directory as .env

# API Keys for LLMs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Editor Settings
AIDER_EDITOR=cursor --wait

# Custom Git Settings
# Optionally set your own name for AI commits
# AIDER_AUTHOR_NAME="AI Assistant (via aider)"
# AIDER_COMMITTER_NAME="Dylan's AI Pair Programmer"

# Custom Output Settings
AIDER_CHAT_HISTORY_FILE=.aider.chat.history.md
AIDER_CODE_THEME=monokai

# Chat Settings
AIDER_STREAM=true
AIDER_FANCY_INPUT=true 