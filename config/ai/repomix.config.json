{
    "output": {
        "filePath": "repomix-output.xml",
        "style": "xml",
        "parsableStyle": true,
        "compress": true,
        "removeComments": true,
        "removeEmptyLines": true,
        "topFilesLength": 15,
        "showLineNumbers": false,
        "copyToClipboard": true,
        "includeEmptyDirectories": false,
        "headerText": "Repository Context",
        "fileSummary": true,
        "directoryStructure": true,
        "git": {
            "sortByChanges": true,
            "sortByChangesMaxCommits": 50
        }
    },
    "include": [
        "**/*.py",
        "**/*.js",
        "**/*.ts",
        "**/*.jsx",
        "**/*.tsx",
        "**/*.sh",
        "**/*.zsh",
        "**/*.yml",
        "**/*.yaml",
        "**/*.json",
        "**/*.md",
        "**/*.html",
        "**/*.css",
        "**/*.scss",
        "**/*.conf",
        "Dockerfile*",
        "bin/**"
    ],
    "ignore": {
        "useGitignore": true,
        "useDefaultPatterns": true,
        "customPatterns": [
            "tmp/",
            "*.log",
            ".DS_Store",
            "Thumbs.db",
            ".cache/",
            "logs/",
            "node_modules/",
            "bower_components/",
            "*.min.js",
            "*.min.css",
            "*.bundle.js",
            "*.map",
            "package-lock.json",
            "yarn.lock",
            "pnpm-lock.yaml",
            "bun.lockb",
            "__pycache__/",
            "*.py[cod]",
            "*$py.class",
            ".pytest_cache/",
            ".coverage",
            "htmlcov/",
            ".uv/",
            ".venv/",
            "venv/",
            "ENV/",
            "*.egg-info/",
            "pip-wheel-metadata/",
            "uv.lock",
            "poetry.lock",
            "dist/",
            "build/",
            "*.zip",
            "*.tar.gz",
            "*.tgz",
            "coverage/",
            "out/",
            "*/bin/",
            ".env",
            ".env.*",
            "*.pem",
            "*.key",
            "*.crt",
            "*.cert",
            "*.jpg",
            "*.jpeg",
            "*.png",
            "*.gif",
            "*.svg",
            "*.ico",
            "*.pdf",
            "*.eot",
            "*.ttf",
            "*.woff",
            "*.woff2",
            "*.mp3",
            "*.mp4",
            "*.mov",
            "*.wav",
            "LICENSE*",
            "COPYING*",
            "*.md.backup",
            "CHANGELOG.md",
            "MANUAL_TESTING.md",
            "examples/**",
            "doc/**",
            "docs/**",
            "vendor/",
            "third_party/",
            "lib/ext/",
            ".idea/",
            ".vscode/",
            "*.sublime-*",
            ".editorconfig",
            "test-results/",
            "generated/",
            "fixtures/",
            "mocks/",
            "test/**",
            "tests/**",
            "*lock.json",
            "*.lock.yaml",
            "licenses/**",
            "*attribution*.md",
            "*license*.md",
            "*license*.txt",
            "*dependencies*.md"
        ]
    },
    "security": {
        "enableSecurityCheck": true
    }
}